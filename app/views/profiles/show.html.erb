<%- model_class = @profile.class -%>
<h1>Funcao</h1>
<hr/>
<dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @profile.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Voltar",
              profiles_path, :class => 'btn'  %>
  <%= link_to "Editar",
              edit_profile_path(@profile), :class => 'btn' %>
  <%= link_to "Excluir",
              profile_path(@profile),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Confirma ?')),
              :class => 'btn btn-danger' %>
</div>
