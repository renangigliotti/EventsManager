<%- model_class = @event.class -%>
<h1>Evento</h1>
<hr/>
<dl class="dl-horizontal">
  <dt><strong>Nome:</strong></dt>
  <dd><%= @event.name %></dd>
</dl>

<table class="table table-striped">
  <thead>
		<caption>Itens</caption>
		<tr>
			<th>Pessoa</th>
			<th>Funcao</th>
			<th></th>
			<th></th>
		</tr>
  </thead>
	<tbody id='item_listing'>
		<%= render :partial => 'item_list' %>
	</tbody>
	<tbody id='item_form'>
		<%= render :partial => 'item_form' %>
	</tbody>
</table>


<div class="form-actions">
  <%= link_to "Voltar", events_path, :class => 'btn'  %>
  <%= link_to "Editar", edit_event_path(@event), :class => 'btn' %>
  <%= link_to "Excluir", event_path(@event), :method => 'delete', :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Confirma ?')), :class => 'btn btn-danger' %>
</div>
