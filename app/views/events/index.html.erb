<%- model_class = Event.new.class -%> <h1>Lista de Eventos</h1>
<hr/>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Nome</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @events.each do |event| %>
		<tr>
			<td><%= link_to event.name, event_path(event) %></td>
			<td> <%= link_to "Editar",
			edit_event_path(event), :class => 'btn btn-mini' %> </td>
			<td><%= link_to "Excluir",
			event_path(event),
			:method => :delete,
			:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
			:class => 'btn btn-mini btn-danger' %> </td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "Cadastrar Evento",
new_event_path,
:class => 'btn btn-primary' %>
