<%- model_class = @city.class -%> 
<h1>Cidade</h1>
<hr/>
<dl class="dl-horizontal">
	<dt>
		<strong>Nome:</strong>
	</dt>
	<dd>
		<%= @city.name %>
	</dd>
	<dt>
		<strong>Estado:</strong>
	</dt>
	<dd>
		<%= @city.state %>
	</dd>
</dl>

<div class="form-actions">
	<%= link_to "Voltar", cities_path, :class => 'btn'  %>
	<%= link_to "Editar", edit_city_path(@city), :class => 'btn' %>
	<%= link_to "Excluir", city_path(@city), :method => 'delete', :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Confirma ?')), :class => 'btn btn-danger' %>
</div>
